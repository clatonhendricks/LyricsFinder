<Window x:Class="LyricsFinder.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Lyrics Finder for Zune &amp; iTunes" Height="664" Width="425" Icon="48x48.png" WindowStartupLocation="CenterScreen" Opacity="1" BorderThickness="0,0,0,0" WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="#FF1A1919" Offset="0"/>
			<GradientStop Color="#FFA6A5A5" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
    <Grid>
        <Button Height="30" Margin="139,0,131,12" Name="btnClose" VerticalAlignment="Bottom" Click="btnClose_Click">Exit</Button>
        <TextBox Margin="6,100,4,89" Name="txtLyrics" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" Text="Created by Claton Hendricks, mail@clatonh.com&#xd;&#xa;Lyrics database provided by www.leoslyrics.com " />
        <Label Height="38" Margin="6,8,10,0" x:Name="lblArtist" VerticalAlignment="Top" BorderThickness="1" Content="Artist" FontSize="30" FontStyle="Italic"/>
        <Label Height="42" Margin="6,51,14,0" Name="lblSong" VerticalAlignment="Top" BorderThickness="2" FontSize="20">Song</Label>
        <CheckBox Height="27" Margin="140,0,132,52" Name="chkTop" VerticalAlignment="Bottom" Click="chkTop_Click">Always on Top</CheckBox>
    </Grid>
</Window>
